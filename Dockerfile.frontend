# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the app
RUN npm run build:prod

# Install a simple web server to serve the built app
RUN npm install -g http-server

EXPOSE 8080

# Serve the app
CMD ["http-server", "dist/games", "-p", "8080", "--gzip", "-c-1"]